@using LibraryInfra.Models
@model Book

@{
    ViewBag.Title = "Add Book";
}

<h2>Add Book</h2>

<form method="post">
    <div class="form-group">
    <label asp-for="Id">Id</label>
    <input asp-for="Id" type="number" class="form-control" id="Id" placeholder="Enter Id">
    <span asp-validation-for="Id" class="text-danger"></span>
    
  </div>
  <div class="form-group">
    <label asp-for="Title">Title</label>
    <input asp-for="Title" type="text" class="form-control" id="Title" placeholder="Enter title">
    <span asp-validation-for="Title" class="text-danger"></span>
    
  </div>
  <div class="form-group">
    <label asp-for="AuthName">Author Name</label>
    <input asp-for="AuthName" type="text" class="form-control" id="AuthName" placeholder="Enter Author Name">
    <span asp-validation-for="AuthName" class="text-danger"></span>

  </div>
  <div class="form-group">
    <label asp-for="Genre">Genre</label>
    <input asp-for="Genre" type="text" class="form-control" id="Genre" placeholder="Enter Genre">
    <span asp-validation-for="Genre" class="text-danger"></span>

  </div>
  <div class="col-2">
  <button type="submit" class="btn btn-primary form-control">Submit</button>
  </div>
  <div>
    <a href="@Url.Action("Books", "Home")">Back to List</a>
</div>
</form>




  